{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id ?? "Error"}}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title ?? "Error"}}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post.slug ?? "Error"}}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ post.summary ?? "Error"}}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content ?? "Error"}}</td>
            </tr>
            <tr>
                <th>PublishedAt</th>
                {% if post is not null %}
                <td>{{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                {% endif %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_blog_index') }}">back to list</a>
    {% if post is not null %}
        <a href="{{ path('app_blog_edit', {'id': post.id}) }}">edit</a>
        {{ include('blog/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
